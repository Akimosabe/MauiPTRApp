<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiPTRApp.ViewModels"
             x:Class="MauiPTRApp.Views.AddEditBookPage">

    <ContentPage.BindingContext>
        <vm:AddEditBookViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry Placeholder="Название книги" Text="{Binding Title}" />
            <Entry Placeholder="Автор" Text="{Binding Author}" />
            <Grid ColumnDefinitions="*,*" Margin="0,20,0,0">
                <Button Text="Сохранить" Command="{Binding SaveCommand}" Grid.Column="0" />
                <Button Text="Отмена" Command="{Binding CancelCommand}" Grid.Column="1" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
