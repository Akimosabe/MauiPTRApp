<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiPTRApp.ViewModels"
             x:Class="MauiPTRApp.Views.AddEditBookPage"
             BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#121212}"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <vm:AddEditBookViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Иконка кота и надпись PTR -->
            <StackLayout Orientation="Vertical" HorizontalOptions="Start" VerticalOptions="Start" Margin="10,10,0,10" Grid.Row="0">
                <Image Source="cat.png"
                       Aspect="AspectFit"
                       HeightRequest="40"
                       WidthRequest="40" />
                <Label Text="PTR"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="#b21f1f"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Основной контент -->
            <StackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300" Spacing="20">
                <!-- Поле для названия книги -->
                <Frame Padding="5" CornerRadius="6"
                       BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#121212}">
                    <Entry Placeholder="Название книги"
                           Text="{Binding Title}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                           BackgroundColor="Transparent" />
                </Frame>

                <!-- Поле для автора -->
                <Frame Padding="5" CornerRadius="6"
                       BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#121212}">
                    <Entry Placeholder="Автор"
                           Text="{Binding Author}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                           BackgroundColor="Transparent" />
                </Frame>

                <!-- Кнопки управления -->
                <Grid ColumnDefinitions="*,*" HorizontalOptions="Center" Margin="0,20">
                    <!-- Кнопка сохранить -->
                    <Button BackgroundColor="{AppThemeBinding Light=#007BFF, Dark=#0056B3}"
                            HeightRequest="60"
                            WidthRequest="60"
                            CornerRadius="30"
                            Command="{Binding SaveCommand}"
                            Grid.Column="0">
                        <Button.ImageSource>
                            <FileImageSource File="yes.png" />
                        </Button.ImageSource>
                    </Button>

                    <!-- Кнопка отмены -->
                    <Button BackgroundColor="{AppThemeBinding Light=#007BFF, Dark=#0056B3}"
                            HeightRequest="60"
                            WidthRequest="60"
                            CornerRadius="30"
                            Command="{Binding CancelCommand}"
                            Grid.Column="1">
                        <Button.ImageSource>
                            <FileImageSource File="no.png" />
                        </Button.ImageSource>
                    </Button>
                </Grid>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
